<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_opaque"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:id="@+id/enter_layout_title">

    <ImageView
        android:id="@+id/enter_image_logo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_budgetbuddy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Select Your Budget For the Month"
        android:textSize="20sp"
        android:layout_marginLeft="20dp" />

    </LinearLayout>

groceries, dining out, shopping
</RelativeLayout>